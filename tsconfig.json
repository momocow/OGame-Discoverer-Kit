{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "src/@types",
      "packages/@types",
      "node_modules/@types"
    ]
  },
  "include": ["src", "packages"]
}
