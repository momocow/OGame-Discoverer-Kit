{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": ["."]
}
